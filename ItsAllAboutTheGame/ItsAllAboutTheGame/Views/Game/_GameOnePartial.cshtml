@model WalletViewModel
@{
    ViewData["Title"] = "_GameOnePartial";
}

<div class="game-one-table">
    <table class="table ">
        @for (int row = 0; row < Model.Grid.GetLength(0); row++)
        {
            <tr class="row @(Model.WinningRows[row] == true ? "winning-row" : "") m-0">
                @for (int col = 0; col < Model.Grid.GetLength(1); col++)
                {
                    <td class="col p-1">
                        <img src="~/images/@(Model.Grid[row, col] + ".png")" alt="@Model.Grid[row, col]" class="fruit-icon" />
                    </td>
                }
            </tr>
        }
    </table>
    <div class="money-row ">
        <div class="row m-0">
            <div class="align-middle d-inline-flex">
                <div class="mr-1">Balance:</div>
                <div class="mr-1" id="balance" data-balance="@Model.Balance.ToString("0.00")" data-symbol="@Model.CurrencySymbol">@Model.Balance</div>
                <div id="currency-symbol">@Model.CurrencySymbol</div>
            </div>
        </div>
        <div class="row m-0">
            <div class="align-middle d-inline-flex">
                <div class="mr-1">Win:</div>
                <div class="mr-1" id="win"> @Model.Win.ToString("0.00")</div>
                <div id="currency-symbol">@Model.CurrencySymbol</div>
            </div>
        </div>
    </div>
    <div class="row ">
        <div class="col-md-12 spin-row ">
            <form class="spin-form" asp-controller="Game" asp-action="GameOneSpin" method="post">
                <div class="input-group mb-3 flex-nowrap align-middle flex-center">
                    <div class="input-group-prepend input-group-text">
                        <p>Stake: </p>
                    </div>
                    <input asp-for="@Model.Stake" type="text" placeholder="0 @Model.CurrencySymbol" onkeypress="return isNumberKey(event)" class="form-control" id="stake-amount" maxlength="7" />
                    <input type="text" asp-for="@Model.Balance" value="@Model.Balance" class="text-hide" />
                    <div class="input-group-append">
                        <button class="btn btn-orange" type="submit">Spin</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

