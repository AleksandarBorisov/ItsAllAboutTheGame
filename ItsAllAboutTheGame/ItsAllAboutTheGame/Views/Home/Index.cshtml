@{
    ViewData["Title"] = "Home Page";
}

<!--Main layout-->
<main class="wow fadeIn slow index-page initially-hidden">
    <div class="container-fluid d-flex align-items-center justify-content-center" id="play-button">
        <div class="row d-flex justify-content-center text-center">
            <div class="col-md-12">
                <!-- Heading -->
                <button id="index-caption" class="animated pulse infinite" href="#games">Play</button>
                <!-- Divider -->
                <hr class="hr-light">
                <!-- Description -->
                <h4 class="white-text my-4">A day without a game is a day wasted!</h4>
            </div>
        </div>
    </div>

    <div class="container">
        <!--Section: Examples-->
        <section id="games" class="text-center">
            <!--Grid row-->
            <div class="row">
