@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<main class="padding-form">
    <div class="row">
        <div class="col-md-12">
            <section class="login-form mr-auto ml-auto m-0">
                <form class="white-text" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <h4 class="text-center valid">@ViewData["Title"]</h4>
                    <div class="form-group md-form form-sm white-text col-form-label-lg">
                        <i class="fa fa-envelope prefix"></i>
                        <label asp-for="Email" class="font-weight-bold white-text">Your Email</label>
                        <input asp-for="Email" class="form-control white-text mb-0" type="text" maxlength="50" />
                        <small>
                            <span asp-validation-for="Email" class="text-danger p-0 validation-text"></span>
                        </small>
                    </div>
                    <div class="form-group md-form form-sm white-text col-form-label-lg">
                        <i class="fa fa-user prefix"></i>
                        <label asp-for="FirstName" class="font-weight-bold white-text">Your Firstname</label>
                        <input asp-for="FirstName" class="form-control white-text mb-0" type="text" maxlength="50" />
                        <small><span asp-validation-for="FirstName" class="text-danger p-0 validation-text"></span></small>
                    </div>
                    <div class="form-group md-form form-sm white-text col-form-label-lg">
                        <i class="fa fa-user prefix"></i>
                        <label asp-for="LastName" class="font-weight-bold white-text">Your Lastname</label>
                        <input asp-for="LastName" class="form-control white-text mb-0" type="text" maxlength="50" />
                        <small><span asp-validation-for="LastName" class="text-danger p-0 validation-text"></span></small>
                    </div>
                    <div class="form-group md-form form-sm white-text col-form-label-lg">
                        <i class="fa fa-key prefix" aria-hidden="true"></i>
                        <label asp-for="Password" class="font-weight-bold white-text">Your Password</label>
                        <input asp-for="Password" class="form-control white-text mb-0" maxlength="50" />
                        <small><span asp-validation-for="Password" class="text-danger p-0 validation-text"></span></small>
                    </div>
                    <div class="form-group md-form form-sm white-text col-form-label-lg">
                        <i class="fa fa-key prefix" aria-hidden="true"></i>
                        <label asp-for="ConfirmPassword" class="font-weight-bold white-text">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control white-text mb-0" maxlength="50" />
                        <small><span asp-validation-for="ConfirmPassword" class="text-danger p-0 validation-text"></span></small>
                    </div>
                    <div class="form-group md-form form-sm white-text col-form-label-lg">
                        <i class="fa fa-calendar prefix"></i>
                        <label asp-for="DateOfBirth" class="font-weight-bold white-text">dd.mm.yyyy</label>
                        <input asp-for="DateOfBirth" type="text" class="form-control white-text mb-0" id="birth-date" />
                        <small><span asp-validation-for="DateOfBirth" class="text-danger p-0 validation-text"></span></small>
                    </div>
                    <div class="white-text">
                        <label asp-for="UserCurrency"></label>
                        <select asp-for="UserCurrency">
                            <option value="EUR">EUR</option>
                            <option value="USD">USD</option>
                            <option value="BGN">BGN</option>
                            <option value="GBP">GBP</option>
                        </select>
                        <small><span asp-validation-for="UserCurrency" class="text-danger p-0 validation-text"></span></small>
                        <i class="fa fa-money prefix ml-1"></i>
                    </div>
                    @if (ViewData["UserExists"] != null)
                    {<span class="text-danger validation-text">@ViewData["UserExists"]</span>}
                    <div class=" form-group text-center mt-4">
                        <button class="btn btn-white text-dark waves-effect waves-light" type="submit">@ViewData["Title"]<i class="fa fa-address-book-o ml-2"></i></button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</main>

@section Scripts {
    <script src="~/js/register.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}