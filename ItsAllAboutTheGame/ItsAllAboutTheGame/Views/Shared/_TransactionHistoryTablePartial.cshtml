@model TransactionHistoryViewModel
@{
    ViewData["Title"] = "TransactionHistoryTablePartial";
}



<div id="transaction-table-pagination">
    <div>
        <form class="float-left page-count-form"  asp-action="UpdateTable" asp-controller="Manage" method="post">
            <div class="input-group mb-3 flex-nowrap">
                <div class="input-group-prepend">
                    <span class="input-group-text">Count:</span>
                </div>
                <input type="text" class="form-control transaction-count" onkeypress="return isNumberKey(event)" maxlength="2" asp-for="@Model.PageSize" value="@Model.PageSize">
                <input type="hidden" asp-for="@Model.SortOrder" value="@Model.SortOrder" />
                <input type="hidden" asp-for="@Model.PageNumber" value="1" />
                <div class="input-group-append">
                    <button type="submit" class="page-count-form-button btn btn-teal btn-md m-0">Change</button>
                </div>
            </div>
        </form>
        
        <form class="float-right search-form" asp-action="UpdateTable" asp-controller="Manage" method="post">
            <div class="input-group mb-3 flex-nowrap">
                <div class="input-group-prepend">
                    <input type="hidden" asp-for="@Model.PageSize" value="@Model.PageSize" />
                    <input type="hidden" asp-for="@Model.SortOrder" value="@Model.SortOrder" />
                    <input type="hidden" asp-for="@Model.PageNumber" value="1" />
                </div>
            </div>
        </form>
    </div>
    <table class="table text-nowrap m-0 " id="transactions-table">
        <thead>
            <tr>
                <th class="col-lg-3">
                    <form class="sorting-form" asp-area="" asp-action="UpdateTable" asp-controller="Manage" method="post">
                        <div class="input-group flex-nowrap flex-center">
                            <div class="input-group-prepend">
                                <input type="hidden" asp-for="@Model.SortOrder" value="@(Model.SortOrder == nameof(Model.CreatedOn) + "_asc" ? nameof(Model.CreatedOn) + "_desc" : nameof(Model.CreatedOn) + "_asc")">
                                <input type="hidden" asp-for="@Model.PageSize" value="@Model.PageSize" />
                                <input type="hidden" asp-for="@Model.PageNumber" value="1" />
                            </div>
                        </div>
                    </form>
                </th>
            </tr>
        </thead>

        <tbody>
            <tr class="amber">
                <th>@nameof(Model.CreatedOn)</th>
                <th>@nameof(Model.Type)</th>
                <th>@nameof(Model.Amount)</th>
                <th>@nameof(Model.Description)</th>
            </tr>
        @foreach (var transaction in Model.Transactions)
        {
            <partial name="_TransactionHistoryRowPartial" model="transaction" />
        }
        </tbody>
    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination pg-teal">
            <li class="page-item">
                @if (Model.HasPreviousPage)
                {
                    <form class="float-left pagination-form" asp-area="" asp-action="UpdateTable" asp-controller="Manage" method="post">
                        <div class="input-group mb-3 flex-nowrap">
                            <div class="input-group-append">
                                <input type="hidden" asp-for="@Model.PageSize" value="@Model.PageSize" />
                                <input type="hidden" asp-for="@Model.SortOrder" value="@Model.SortOrder" />
                                <input type="hidden" asp-for="@Model.PageNumber" value="@(Model.PageNumber - 1)" />
                                <button type="submit" class="page-link pagination-form-button pagination">Previous</button>
                            </div>
                        </div>
                    </form>
                }
                else
                {
                    <a class="page-link navigational-disabled">Previous</a>
                }
            </li>
            @for (int p = 1; p <= Model.PageCount; p++)
            {
                <li class="page-item @(p == Model.PageNumber ? "active" : "") ">
                    <form class="float-left pagination-form" asp-area="" asp-action="UpdateTable" asp-controller="Manage" method="post">
                        <div class="input-group mb-3 flex-nowrap">
                            <div class="input-group-append">
                                <input type="hidden" asp-for="@Model.PageSize" value="@Model.PageSize" />
                                <input type="hidden" asp-for="@Model.SortOrder" value="@Model.SortOrder" />
                                <input type="hidden" asp-for="@Model.PageNumber" value="@p" />
                                <button type="submit" class="page-link pagination-form-button">@p</button>
                            </div>
                        </div>
                    </form>
                </li>
            }
            <li class="page-item">
                @if (Model.HasNextPage)
                {
                    <form class="float-left pagination-form" asp-area="" asp-action="UpdateTable" asp-controller="Manage" method="post">
                        <div class="input-group mb-3 flex-nowrap">
                            <div class="input-group-append">
                                <input type="hidden" asp-for="@Model.PageSize" value="@Model.PageSize" />
                                <input type="hidden" asp-for="@Model.SortOrder" value="@Model.SortOrder" />
                                <input type="hidden" asp-for="@Model.PageNumber" value="@(Model.PageNumber + 1)" />
                                <button type="submit" class="page-link pagination-form-button pagination">Next</button>
                            </div>
                        </div>
                    </form>
                }
                else
                {
                    <a class="page-link navigational-disabled">Next</a>
                }
            </li>
        </ul>
    </nav>
</div>

