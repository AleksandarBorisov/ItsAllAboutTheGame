<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ItsAllAboutTheGame</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/mdb/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/lib/mdb/css/mdb.css" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/lib/mdb/font/roboto/Roboto-Regular.ttf">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
              asp-fallback-href="~/lib/mdb/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.14/css/mdb.min.css"
              asp-fallback-href="~/lib/mdb/css/mdb.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto"
              asp-fallback-href="~/lib/mdb/font/roboto/Roboto-Regular.ttf"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/lib/mdb/css/style.css" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    </environment>
</head>
<body>
    <header>
        @*Fixed navbars use position: fixed, meaning they’re pulled from the normal flow of the DOM and may require custom CSS (e.g., padding-top on the ) to prevent overlap with other elements.*@
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top scrolling-navbar">
            <div class="flex-md-column w-100">
                <ul class="navbar-nav navbar-navsmooth-scroll">
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                            <div class="mask waves-effect waves-light">
                                <img id="logo" class="left img-fluid" src="~/images/CardsLogo.png" />
                            </div>
                        </a>
                    </li>
                    <vc:login-status 
                        parameter1="parameter1 value"
                        parameter2="parameter2 value">
                    </vc:login-status>
                    @*@await Html.PartialAsync("_LoginPartial")*@
                </ul>
                <!-- Collapse button -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation"
                        aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Collapsible content -->
                <div class="collapse navbar-collapse" id="navigation">
                    <!-- Links -->
                    <ul class="navbar-nav w-100">
                        <li class="nav-item">
                            <a class="nav-link" href="#best-features">Promotions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#examples">Responsible Gambling</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#examples">Payment Methods</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Contact</a>
                        </li>
                        <li class="nav-item ml-auto">
                            <a class="nav-link"><i class="fa fa-facebook white-text fa-2x"></i></a>
                        </li>
                        <li class="nav-item phoneSizeMargin">
                            <a class="nav-link"><i class="fa fa-twitter white-text fa-2x"></i></a>
                        </li>
                        <li class="nav-item phoneSizeMargin">
                            <a class="nav-link"><i class="fa fa-instagram white-text fa-2x"></i></a>
                        </li>
                        <li class="nav-item phoneSizeMargin">
                            <a class="nav-link"><i class="fa fa-google-plus white-text fa-2x"></i></a>
                        </li>
                        <li class="nav-item phoneSizeMargin">
                            <a class="nav-link"><i class="fa fa-linkedin white-text fa-2x"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!--Mask-->
        <div id="intro" class="view">

            <div class="mask rgba-black-strong">

                <div class="container-fluid d-flex align-items-center justify-content-center h-100">

                    <div class="row d-flex justify-content-center text-center">

                        <div class="col-md-12">

                            <!-- Heading -->
                            <button id="index-caption" class="animated pulse infinite" href="">Play</button>
                            <!-- Divider -->
                            <hr class="hr-light">

                            <!-- Description -->
                            <h4 class="white-text my-4">A day without a game is a day waisted!</h4>

                        </div>

                    </div>

                </div>

            </div>

        </div>
        <!--/.Mask-->
    </header>
    <header>
        @if (TempData["Success"] != null)
        {

            <div id="infoValidationSummary" class="modal fade" tabindex="-1" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="form-horizontal">
                                @TempData["Success"]
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </header>
    <div>
        @RenderBody()
        <hr />
        <!-- Footer -->
        <footer class="page-footer unique-color-dark">
            <!--Footer Links-->
            <!--Footer Links-->
            <div class="container mt-5 mb-4 text-center text-md-left">
                <div class="row mt-3">

                    <!--First column-->
                    <div class="col-md-3 col-lg-4 col-xl-3 mb-4">
                        <h6 class="text-uppercase font-weight-bold">
                            <strong>Company name</strong>
                        </h6>
                        <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                        <p>
                            Here you can use rows and columns here to organize your footer content. Lorem ipsum dolor sit
                            amet, consectetur adipisicing elit.
                        </p>
                    </div>
                    <!--/.First column-->
                    <!--Second column-->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h6 class="text-uppercase font-weight-bold">
                            <strong>Products</strong>
                        </h6>
                        <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                        <p>
                            <a href="#!">MDBootstrap</a>
                        </p>
                        <p>
                            <a href="#!">MDWordPress</a>
                        </p>
                        <p>
                            <a href="#!">BrandFlow</a>
                        </p>
                        <p>
                            <a href="#!">Bootstrap Angular</a>
                        </p>
                    </div>
                    <!--/.Second column-->
                    <!--Third column-->
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h6 class="text-uppercase font-weight-bold">
                            <strong>Useful links</strong>
                        </h6>
                        <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                        <p>
                            <a href="#!">Your Account</a>
                        </p>
                        <p>
                            <a href="#!">Become an Affiliate</a>
                        </p>
                        <p>
                            <a href="#!">Shipping Rates</a>
                        </p>
                        <p>
                            <a href="#!">Help</a>
                        </p>
                    </div>
                    <!--/.Third column-->
                    <!--Fourth column-->
                    <div class="col-md-4 col-lg-3 col-xl-3">
                        <h6 class="text-uppercase font-weight-bold">
                            <strong>Contact</strong>
                        </h6>
                        <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                        <p>
                            <i class="fa fa-home mr-3"></i> New York, NY 10012, US
                        </p>
                        <p>
                            <i class="fa fa-envelope mr-3"></i> info@example.com
                        </p>
                        <p>
                            <i class="fa fa-phone mr-3"></i> + 01 234 567 88
                        </p>
                        <p>
                            <i class="fa fa-print mr-3"></i> + 01 234 567 89
                        </p>
                    </div>
                    <!--/.Fourth column-->

                </div>
            </div>
            <!--/.Footer Links-->
            <!-- Copyright -->
            <div class="footer-copyright text-center py-3">
                © @DateTime.Now.Year Copyright:
                <a href="#"> ItsAllAboutTheGame.AzureWebsites.net</a>
            </div>
            <!-- Copyright -->
            <!-- Footer -->
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/mdb/js/jquery-3.3.1.min.js"></script>
        <script src="~/lib/mdb/js/mdb.min.js"></script>
        <script src="~/lib/mdb/js/bootstrap.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        <script src="~/js/site.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
                asp-fallback-src="~/lib/mbd/js/jquery-3.3.1.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"
                asp-fallback-src="~/lib/mdb/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.14/js/mdb.min.js"
                asp-fallback-src="~/lib/mdb/js/mdb.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
    </environment>

    @RenderSection("Scripts", required: false)

</body>
</html>
