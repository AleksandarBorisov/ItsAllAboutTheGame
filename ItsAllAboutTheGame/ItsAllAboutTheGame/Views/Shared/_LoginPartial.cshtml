
@using Microsoft.AspNetCore.Identity
@using ItsAllAboutTheGame.Data.Models


@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                
                <button type="submit" class="btn btn-white text-dark rounded">Log out<i class="fa fa-sign-out ml-2"></i></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-white text-dark rounded">Register<i class="fa fa-id-badge ml-2"></i></a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-outline-white rounded">Log in<i class="fa fa-sign-in ml-2"></i></a></li>
    </ul>
}
